            <div>
                <h1 class="text-center">Logged In User: These Are Your Courses...</h1>
                <div class="container mt-3">
                    <div class="row d-flex justify-content-center">

                    {{!-- THIS RENDERS EACH VIDEO BLOCK IN YOUR MONGO DB --}}
                    
                    {{#each video}}
                        <div class="card-deck">
                            <div class="card mb-4">
                                <img class="card-img-top"
                                    src="{{this.imageUrl}}"
                                    alt="Card image cap" width="400">
                                <div class="card-body">
                                    <h4 class="card-title">{{this.title}}</h4>
                                    <a href="/details/{{this._id}}"><button type="button" class="btn btn-info">Details</button></a>
                                </div>
                            </div>
                    </div>

                    {{!-- OR NOTHING IF NO VIDEOS FOUND... --}}

                    {{else}}
                    <h4 class="text-center">No courses...</h4>
                    {{/each}}

                </div>
            </div>
