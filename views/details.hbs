
        <div class="container">
        <h1 class="my-4">Course title : {{video.title}}</h1>
        <div class="row">
            <div class="col-md-8">
                <img class="img-fluid"
                    src="{{video.imageUrl}}"
                    alt="Express" />
            </div>

            <div class="col-md-4 text-center">
                <h3 class="my-3">{{video.description}}</h3>
                <p>{{video.createdAt}}</p>
                {{#if isCreator}}
                <a class="btn btn-warning" href="/edit/{{video._id}}">Edit</a>
                <a class="btn btn-warning" href="/delete/{{video._id}}">Delete</a>
                {{/if}}
                {{#if isEnrolled}}
                <span class="enrolled-span">You Are Enrolled</span>
                {{else}}
                <a class="enrolled-span" href="/enroll/{{video._id}}">Enroll Now</a>
                {{/if}}
            </div>
        </div>
        </div>
